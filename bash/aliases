alias ls='ls -FG'
alias auto='~/bin/airportctl auto'
alias office='~/bin/airportctl office'
alias vw='open ~/vw7.5nc/image/simple.im' # VisualWorks
alias seq='gseq'
alias open_zend='mate /opt/local/lib/ZendFramework/library/Zend'
alias sandbox='mate ~/src/sandbox'
alias u-web='ssh -p 2222 kiwiple@u-web.kiwiple.com'

function promptcolors {
	for color in `fgrep \\e ~/dotfiles/bash/config | fgrep -v '#' | cut -f1 -d=`
	do
		echo -e ${!color}$color$NO_COLOR
	done
}

function ovj {
	ssh kiwiple@$1.ovjet.com
}

function dev {
	if [ "$1" = "simple" ]; then
		ssh simple@dev.kiwiple.com
	else
		ssh kiwiple@dev.ovjet.com
	fi
}

function collab {
	if [ "$1" = "simple" ]; then
		ssh simple@collab
	else
		ssh kiwiple@collab
	fi
}

function tacoo {
	if [ "$1" = "mdb" ]; then
		ssh kiwiple@mdb.tacoo.co.kr
	else
		ssh kiwiple@api.tacoo.co.kr
	fi
}
