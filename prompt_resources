# emoji
# check http://en.wikipedia.org/wiki/Emoji
function emoji {
	[[ -z $1 ]] && echo -n "" && return
	[[ $1 == "host" ]] && echo -n üíª
	[[ $1 == "dir" ]] && echo -n üìÇ
	[[ $1 == "clock" ]] && echo -n üïô
	[[ $1 == "fire" ]] && echo -n üî•
	[[ $1 == "santa" ]] && echo -n üéÖ
	[[ $1 == "snake" ]] && echo -n üêç
	[[ $1 == "rocket" ]] && echo -n üöÄ
	[[ $1 == "scream" ]] && echo -n üò±
}